#:kivy 1.0
#:import kivy kivy

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,0.2
        Label:
            text: "search options here later"
    ScrollView:
        do_scroll_x: False
        GridLayout:
            id: grid
            size_hint_y: None
            height: self.minimum_height
            cols: 3
            row_default_height: 100

<ColoursBox>

    canvas.before:
        Color:
            rgb: root.colour
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5,0.5
        canvas.before:
            Color:
                rgb: 0,0,0
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: name
        Label:
            id: company
        Label:
            id: colour