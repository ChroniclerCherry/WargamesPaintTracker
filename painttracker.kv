#:kivy 1.0
#:import kivy kivy

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1,None
        height: 40
        TextInput:
            text: "Search option to come"
        Button:
            text: "SAVE"
            on_press: app.save_data()
    ScrollView:
        padding: 10
        do_scroll_x: False
        GridLayout:
            id: grid
            size_hint_y: None
            height: self.minimum_height
            cols: 3
            row_default_height: 100

<ColoursBox>
    canvas.before:
        Color:
            rgb: root.colour
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,0.7
        canvas.before:
            Color:
                rgb: 0,0,0
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: name
        Label:
            id: company
        BoxLayout:
            ToggleButton:
                id: owned
                group: self.parent
                text: "Owned"
                on_press: app.update_ownership("Y",root.index,owned)
            ToggleButton:
                id: unowned
                group:self.parent
                text:"Unowned"
                on_press: app.update_ownership("N",root.index,unowned)
        Label:
            size_hint_y: None
            height: 10